<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quran_book"
    tools:context=".fragments.OpenSurahFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ticket"
                android:layout_width="500dp"
                android:layout_height="220dp"
                android:layout_margin="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="26dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toTopOf="@id/player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/adView">

                <ImageView
                    android:id="@+id/surah_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:contentDescription="@string/surah_number"
                    android:scaleType="centerCrop"
                    android:src="@drawable/number_1" />

                <TextView
                    android:id="@+id/surah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="160dp"
                    android:padding="10dp"
                    android:text="FOTIHA SURASI"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/player"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/bg2"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/read_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ticket">

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_play_arrow" />

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:padding="2dp"
                    android:text="00:00:00"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:padding="2dp"
                    android:text="/00:00:00"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:progressBackgroundTint="#04760B"
                    android:progressTint="@color/black"
                    android:thumbTint="@color/black" />

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_more"
                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/read_btn"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="200dp"
                android:background="@drawable/bg4"
                android:padding="10dp"
                android:text="O'qish"
                android:textColor="@color/black"
                app:backgroundTint="#2AEB28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player" />

            <ImageButton
                android:id="@+id/previous_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg6"
                android:src="@drawable/ic_previous"
                app:layout_constraintStart_toStartOf="@id/read_btn"
                app:layout_constraintTop_toBottomOf="@id/read_btn" />

            <ImageButton
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg6"
                android:src="@drawable/ic_next"
                app:layout_constraintEnd_toEndOf="@id/read_btn"
                app:layout_constraintTop_toTopOf="@id/previous_btn" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                app:adSize="LEADERBOARD"
                app:adUnitId="ca-app-pub-5029869581523674/3742583437"
                app:layout_constraintBottom_toTopOf="@id/ticket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </com.google.android.gms.ads.AdView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
